# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := glload glimg glfw freeglut

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

glload: 
	@echo "==== Building glload ($(config)) ===="
	@${MAKE} --no-print-directory -C glload -f Makefile

glimg: 
	@echo "==== Building glimg ($(config)) ===="
	@${MAKE} --no-print-directory -C glimg -f Makefile

glfw: 
	@echo "==== Building glfw ($(config)) ===="
	@${MAKE} --no-print-directory -C glfw -f Makefile

freeglut: 
	@echo "==== Building freeglut ($(config)) ===="
	@${MAKE} --no-print-directory -C freeglut -f Makefile

clean:
	@${MAKE} --no-print-directory -C glload -f Makefile clean
	@${MAKE} --no-print-directory -C glimg -f Makefile clean
	@${MAKE} --no-print-directory -C glfw -f Makefile clean
	@${MAKE} --no-print-directory -C freeglut -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   glload"
	@echo "   glimg"
	@echo "   glfw"
	@echo "   freeglut"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
